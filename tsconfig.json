{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "es2017"
    ],
    "allowJs": true,
    "jsx": "react-native",
    "sourceMap": true,
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@assets": [
        "./src/assets/"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@features/*": [
        "./src/features/*"
      ],
      "@config": [
        "./src/config/"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@containers": [
        "./src/containers/"
      ],
      "@containers/*": [
        "./src/containers/*"
      ],
      "@data": [
        "./src/data/"
      ],
      "@data/*": [
        "./src/data/*"
      ],
      "@api": [
        "./src/api/"
      ],
      "@api/*": [
        "./src/api/*"
      ],
      "@models": [
        "./src/models/"
      ],
      "@models/*": [
        "./src/models/*"
      ],
      "@hooks": [
        "./src/hooks/"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@hoc": [
        "./src/hoc/"
      ],
      "@hoc/*": [
        "./src/hoc/*"
      ],
      "@interfaces": [
        "./src/interfaces/"
      ],
      "@interfaces/*": [
        "./src/interfaces/*"
      ],
      "@navigation": [
        "./src/navigation/"
      ],
      "@screens": [
        "./src/screens/"
      ],
      "@screens/*": [
        "./src/screens/*"
      ],
      "@services": [
        "./src/services/"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@store": [
        "./src/store"
      ],
      "@store/*": [
        "./src/store/*"
      ],
      "@theme/*": [
        "./src/theme/*"
      ],
      "@theme": [
        "./src/theme/"
      ],
      "@libs/*": [
        "./src/libs/*"
      ],
      "@libs": [
        "./src/libs/"
      ],
      "@contexts/*": [
        "./src/contexts/*"
      ],
      "@contexts": [
        "./src/contexts/"
      ],
      "@localization/*": [
        "./src/localization/*"
      ],
      "@localization": [
        "./src/localization/"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@utils": [
        "./src/utils/"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "resolveJsonModule": true,
    "inlineSources": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
